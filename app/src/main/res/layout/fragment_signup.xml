<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                app:met_checkCharactersCountAtBeginning="false"
                app:met_clearButton="true"
                app:met_iconLeft="@drawable/ic_account_circle"
                app:met_minCharacters="5" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                app:met_checkCharactersCountAtBeginning="false"
                app:met_clearButton="true"
                app:met_helperText="(e.g. someone@example.com)"
                app:met_iconLeft="@drawable/ic_email_black_24dp"
                app:met_maxCharacters="30"
                app:met_minCharacters="5" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etmob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile"
                android:inputType="phone"
                app:met_checkCharactersCountAtBeginning="false"
                app:met_clearButton="true"
                app:met_iconLeft="@drawable/ic_call_black_24dp"
                app:met_maxCharacters="10"
                app:met_minCharacters="10" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etcollege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="College"
                app:met_clearButton="true"
                app:met_iconLeft="@drawable/ic_school_black_24dp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etreferid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Refer Id (optional)"
                app:met_clearButton="true"
                app:met_iconLeft="@drawable/ic_record_voice_over_black_24dp" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                app:met_checkCharactersCountAtBeginning="false"
                app:met_clearButton="true"
                app:met_iconLeft="@drawable/ic_lock_black_24dp"
                app:met_minCharacters="8" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etrepass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Re-enter Password"
                android:inputType="textPassword"
                app:met_checkCharactersCountAtBeginning="false"
                app:met_clearButton="true"
                app:met_iconLeft="@drawable/ic_lock_black_24dp"
                app:met_minCharacters="8" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_btn"
            android:text="Sign up"
            android:textColor="@drawable/back_txt" />

    </LinearLayout>
</ScrollView>